<div class="form-body scrollable">
    <p class="notes">
        Configure the calendar source. Select a preset, a saved custom calendar (created in the Calendar Maker), or use "Custom" for manual JSON.
    </p>
    
    <input type="file" id="wgtgm-import-file" accept=".json" style="display:none;" />
    <input type="file" id="wgtgm-import-notes-file" accept=".json" style="display:none;" />

    <div class="form-group">
        <label for="calendar-source">Calendar Source</label>
        <div class="form-fields">
            <select name="source" id="calendar-source">
                {{#each calendarOptions as |option|}}
                <option value="{{option.value}}" {{#if option.selected}}selected{{/if}}>
                    {{option.label}}
                </option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="time-multiplier">Time Multiplier</label>
        <div class="form-fields">
            <input type="number" name="timeMultiplier" id="time-multiplier" value="{{this.timeMultiplier}}" min="0" step="1">
            <p class="notes">Set game time passage x times real time.</p>
        </div>
    </div>

    <div class="form-group" id="wgtngm-custom-json-area">
        <label for="calendar-json">Calendar Configuration JSON</label>
        <p class="notes">View only for presets/saved calendars. Editable for "Custom (Manual JSON)".</p>
        <textarea name="calendarJson" id="calendar-json" style="height:300px;">{{this.calendarJson}}</textarea>
    </div>
</div>